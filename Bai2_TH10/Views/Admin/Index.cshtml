@model IEnumerable<Bai2_TH10.Models.tbl_SanPham>
@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<h2>Danh sách sản phẩm</h2>

<p>
    <a href="@Url.Action("ThemMoi")" class="btn btn-success">Thêm mới</a>
</p>

<table class="table table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Mã</th>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th>Hình ảnh</th>
            <th>Mô tả</th>
            <th>Số lượng tồn</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSP</td>
                <td>@item.TenSP</td>
                <td>@String.Format("{0:0,0 VNĐ}", item.DonGia)</td>
                <td><img src="~/IMG/@item.HinhAnh" width="80" /></td>
                <td>@item.MoTa</td>
                <td>@item.SoLuongTon</td>
                <td>
                    <a href="@Url.Action("Sua", new { id = item.MaSP })" class="btn btn-primary btn-sm">Sửa</a>
                    <a href="@Url.Action("Xoa", new { id = item.MaSP })" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');"> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
