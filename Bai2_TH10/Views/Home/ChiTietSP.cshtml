@model Bai2_TH10.Models.tbl_SanPham

<div style="margin-top:90px;" class="container">
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="~/IMG/@Model.HinhAnh"
                     alt="@Model.TenSP"
                     class="img-fluid rounded mb-3 shadow-sm"
                     style="max-height: 300px; object-fit: cover;" />
            </div>

            <div class="col-md-8">
                <h3 class="text-primary fw-bold mb-3">@Model.TenSP</h3>

                <p>
                    <strong>Giá bán:</strong>
                    <span class="text-danger fw-bold">@string.Format("{0:N0} đ", Model.DonGia)</span>
                </p>

        
                <p><strong>Nhà xuất bản:</strong> @Model.MaSP</p>

                <p><strong>Số lượng tồn:</strong> @Model.SoLuongTon</p>
                <p><strong>Mô tả:</strong></p>
                <div class="bg-light p-3 rounded">@Model.MoTa</div>

                <div class="mt-4">
                    <a href="@Url.Action("Index", "GioHang")" class="btn btn-secondary me-2">
                        Quay lại danh sách
                    </a>
                   
                </div>
            </div>
        </div>
    </div>
</div>
