@model Bai01.Models.SACH

<div style="margin-top:90px;" class="container">
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="~/Content/IMG/@Model.ANHBIA"
                     alt="@Model.TENSACH"
                     class="img-fluid rounded mb-3 shadow-sm"
                     style="max-height: 300px; object-fit: cover;" />
            </div>

            <div class="col-md-8">
                <h3 class="text-primary fw-bold mb-3">@Model.TENSACH</h3>

                <p>
                    <strong>Giá bán:</strong>
                    <span class="text-danger fw-bold">@string.Format("{0:N0} đ", Model.GIABAN)</span>
                </p>

                <p><strong>Chủ đề:</strong> @Model.MACHUDE</p>
                <p><strong>Nhà xuất bản:</strong> @Model.MANXB</p>

                <p><strong>Số lượng tồn:</strong> @Model.SOLUONGTON</p>
                <p><strong>Mô tả:</strong></p>
                <div class="bg-light p-3 rounded">@Model.MOTA</div>

                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-2">
                        Quay lại danh sách
                    </a>
                    <a href="@Url.Action("AddToCart", "Home", new { id = Model.MASACH })" class="btn btn-primary">
                  Mua
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
